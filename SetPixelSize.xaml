<Window x:Class="MakeBitMap.SetPixelSize"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MakeBitMap"
        mc:Ignorable="d"
        Title="SetPixelSize" 
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterOwner"
        Height="220" Width="200">
    <Grid>
        <StackPanel Orientation="Vertical" >
            <RadioButton x:Name="RadioButton_8_16" Content="8(W)x16(H)" Margin="40,30,50,0" IsChecked="True"  Checked="RadioButton_8_16_Checked" />
            <RadioButton x:Name="RadioButton_48_96" Content="48(W)x96(H)" Margin="40,30,50,0" Checked="RadioButton_48_96_Checked" />
            <Button Name="okButton" Height="30" Width="70"   Margin="40,40,50,0" BorderBrush="#a6a6a6" Foreground ="#333333" Background="#fcfcfc" Click="okButton_Click" >OK</Button>
        </StackPanel>
    </Grid>
</Window>
